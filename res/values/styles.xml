<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="borderlessButtonStyle">
       <item name="android:background">@drawable/btn_default_transparent</item>
    </style>
    <style name="widgetPlayerButton">
        <item name="android:background">@drawable/appwidget_dark_bg_clickable</item>
    </style>
    <style name="widgetLaunchButton">
       <item name="android:background">@drawable/appwidget_dark_bg_clickable</item>
    </style>
    <style name="widgetPresetButton">
       <item name="android:background">@drawable/appwidget_dark_bg_clickable</item>
       <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="widgetPresetButtonSelected">
       <item name="android:background">@drawable/appwidget_dark_bg_clickable_selected</item>
       <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="stationEntryButton">
        <item name="android:textColor">@android:color/white</item>
	    <item name="android:background">@android:color/transparent</item>
    </style>
	
</resources>